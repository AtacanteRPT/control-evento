<main>
    <div class="row">
        <div class="col s12">

            <div style="padding: 35px;" align="left" class="card">


                <h4>Actualizar Cargo</h4>

                <div class="row">
                    <form class="" action="/cargo/update" method="post">
                        <input name="id" value="<%= element.id %>" hidden="true" required>
                        <div class="col s12 m6">
                            <label for="">nombre</label>
                            <input type="text" name="nombre" value="<%= element.nombre %>">
                        </div>

                        <div class="col s12 m6">
                            <label for="">observacion</label>
                            <input type="text" name="observacion" value="<%= element.observacion %>">
                        </div>                        
                        <button class="btn blue" type="submit">Actualizar</button>
                    </form>
                    <br />
                    <a class="waves-effect waves-light btn" href="/cargo/index"><i
                        class="material-icons left">arrow_back</i>Index</a>
                </div>


            </div>

        </div>
    </div>
</main>