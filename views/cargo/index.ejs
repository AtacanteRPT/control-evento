<main>
    <div class="row">
        <div class="col s12">
            <div style="padding: 35px;" align="left" class="card">

                <h3>Cargos</h3>


                <% if (result.length == 0) { %>
                <h4>
                    0 Cargos
                </h4>
                <% } else { %>
                <table class="highlight striped">
                    <thead>
                        <th>#</th>
                        <th>nombre</th>
                        <th>observacion</th>
                        <!--
                            <th>Creado</th>
                            <th>Actualizado</th>-->
                        <th colspan="2"></th>
                    </thead>    

                    <tbody>
                        <% result.forEach((item, i) => { %>
                        <tr>
                            <td>
                                <%= (i + 1) %>
                            </td>
                            <td>
                                <%= item.nombre %>
                            </td>

                            <td>
                                <%= item.observacion %>
                            </td>
                            
                            <!--<td>
                                        <%  var fecha = new Date(item.createdAt)%>
                                            <%= fecha.toLocaleDateString()  %>
                                    </td>
                                    <td>
                                        <%  fecha = new Date(item.updatedAt)%>
                                            <%= fecha.toLocaleDateString()  %>
                                    </td>-->
                            <!--<td>
                                        <a href="/evento/show/<%= item.id %>">Show</a>
                                    </td>-->
                            <td>
                                <a class="waves-effect waves-light btn red" href="/cargo/delete/<%= item.id %>"><i
                                        class="medium material-icons">delete</i></a>
                            </td>
                            <td>
                                <a class="waves-effect waves-light btn green" href="/cargo/edit/<%= item.id %>"><i
                                        class="medium material-icons">edit</i></a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                <% } %>

                <br>
                <a class="btn-floating btn-large waves-effect waves-light red" href="/cargo/crear"><i
                        class="material-icons">add</i></a>
            </div>
        </div>
    </div>

</main>